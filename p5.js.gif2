let x, y;

var speed = 2;
function setup(){
  createCanvas(400, 400);
  x = width / 2;
  y = height / 2;
}
function draw (){
  background(220);
  
  fill(255); // color of the ball
  ellipse(x, y, 50, 75); // los dos Ãºltimos digitos son el tamano de la pelota
  
  x = x + speed;
  
  if (x>height || x <=0){
    speed = speed * -1;
  }
}
